<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Restaurant Name TextView -->
    <TextView
        android:id="@+id/restaurantNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Restaurant Address TextView -->
    <TextView
        android:id="@+id/restaurantAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Address"
        android:textSize="16sp" />

    <!-- Restaurant Phone TextView -->
    <TextView
        android:id="@+id/restaurantPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Phone"
        android:textSize="16sp" />

    <!-- Restaurant Description TextView -->
    <TextView
        android:id="@+id/restaurantDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Restaurant Description"
        android:textSize="16sp" />

    <!-- Additional UI elements like a Button for directions could go here -->

</LinearLayout>
